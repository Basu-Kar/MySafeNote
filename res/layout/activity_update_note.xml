<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.ksoft.mynote.UpdateNoteActivity" 
     android:background="@color/bgcolor">

    <EditText
        android:id="@+id/update_note_details_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/update_note_subject_label"
        android:layout_marginTop="24dp"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:lines="10"
        android:maxLength="200"
        android:scrollHorizontally="true"
        android:singleLine="false"
        android:textColor="@color/home_edit_textcolor"
        android:textSize="21sp"
        android:textStyle="italic|bold" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/update_note_subject_label"
        style="@style/ViewTextFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/update_note_details_id"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp"
        android:text="@string/add_note_type_label"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/update_note_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/update_note_subject_label"
        android:layout_alignBottom="@+id/update_note_subject_label"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/update_note_subject_label"
        android:background="@drawable/edit_text"
        android:ems="10"
        android:hint="@string/home_text_dflt"
        android:inputType="textFilter"
        android:maxLength="25"
        android:textColor="@color/home_edit_textcolor"
        android:textSize="21sp"
        android:textStyle="italic|bold" />

    <Button
        android:id="@+id/update_note_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/update_note_details_id"
        android:text="Update" />

    <TextView
        android:id="@+id/update_note_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/update_note_update"
        android:layout_alignBottom="@+id/update_note_update"
        android:layout_alignLeft="@+id/update_note_details_id"
        android:text="TextView" 
        android:visibility="gone"
        />

</RelativeLayout>
