<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="MyTheme" parent="android:Theme.Holo">
       
        <item name="android:windowBackground">@color/bgcolor</item>
        <item name="android:listViewStyle">@style/MyListView</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        
        <item name="android:textStyle">italic|bold</item>
       <item name="android:textColor">@color/action_bar_textcolor</item>
       <item name="android:typeface">serif</item>
       <item name="android:fontFamily">sans-serif-condensed</item>
      <!--  <item name="android:textAllCaps">true</item> -->
       
    </style>
    
    <style name="MyListView" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/note_lunch</item>
    </style>
    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
       <item name="android:background">@color/action_bar_bgcolor</item>
    </style>
    
    <style name="HomeFont">
        <item name="android:textStyle">italic|bold</item>
       <item name="android:textColor">@color/action_bar_bgcolor</item>
       <item name="android:typeface">serif</item>
       <item name="android:fontFamily">sans-serif-condensed</item>        
    </style>
    
      <style name="EditTextFont">
        <item name="android:textStyle">normal|bold</item>
       <item name="android:textColor">@color/home_edit_textcolor</item>
       <item name="android:typeface">serif</item>
       <item name="android:fontFamily">sans-serif-condensed</item>        
    </style>
    <style name="ViewTextFont">
        <item name="android:textStyle">normal|bold</item>
       <item name="android:textColor">@color/action_bar_bgcolor</item>
       <item name="android:typeface">serif</item>
       <item name="android:fontFamily">sans-serif-condensed</item>   
       <item name="android:textSize"  >21sp</item>     
    </style>
    
      
</resources>
 